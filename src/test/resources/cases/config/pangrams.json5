{
  $schema: "../../../../main/resources/schema/case.schema.json",

  // How many times to try and establish a connection to remote server. First counts.
  retry: 2,

  // Delay between tries.
  delay: 5,

  // Enable TLS.
  tls: true,

  // Email envelopes.
  envelopes: [
    // Envelope one.
    {
      chunkSize: 8192,
      // Email eml file to transmit.
      file: "src/test/resources/cases/sources/pangrams.eml",

      // Assertions to run against the envelope.
      assertions: {

        // Protocol assertions.
        // Check SMTP responses match regular expressions.
        protocol: [
          ["MAIL", "^250.*Sender OK"],
          ["RCPT", "^250.*Recipient OK"],
          ["BDAT", "^250.*Received OK"]
        ]
      }
    }
  ],

  // Assertions to run against the connection.
  assertions: {
    // Protocol assertions.
    // Check SMTP responses match regular expressions.
    protocol: [
      [ "SMTP", "^220" ],
      [ "EHLO", "STARTTLS" ],
      [ "SHLO", "250 HELP" ],
      [ "QUIT" ]
    ]
  }
}
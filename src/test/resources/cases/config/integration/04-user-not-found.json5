{
  $schema: "../../../../../main/resources/schema/case.schema.json",

  // Test: Email rejection for non-existent mailbox.
  // Validates: Early rejection at RCPT TO stage (before DATA).
  // This prevents wasted bandwidth and server resources processing invalid emails.
  // Server queries Dovecot user database to validate recipient exists.
  // Expected: 550 permanent negative response (user does not exist).

  // How many times to try and establish a connection to remote server. First counts.
  retry: 2,

  // Delay between tries.
  delay: 5,

  // Delivery route.
  route: "docker",

  // Enable TLS.
  tls: true,

  // Email envelopes.
  envelopes: [
    // Envelope one.
    {
      mail: "tony@example.com",
      rcpt: ["nonexistent@example.com"],  // This user does not exist in PostgreSQL users table

      // Email eml file to transmit.
      file: "src/test/resources/cases/sources/lipsum.eml",

      // Assertions to run against the envelope.
      assertions: {

        // Protocol assertions.
        // Check SMTP responses match regular expressions.
        protocol: [
          ["MAIL", "^250.*Sender OK"],
          // Rejected at RCPT stage - user validation fails.
          // 550 = permanent failure (will not retry).
          ["RCPT", "^550"]
        ],

        // External assertions.
        external: [
          {
            // Assertion type request for pulling logs from the API.
            type: "request",

            // How long to wait before asserting.
            wait: 2,

            // Delay between log pulling attempts.
            delay: 2,

            // How many times to retry should no logs be found or valid.
            retry: 3,

            // HTTP request details.
            request: {
              url: "http://127.0.0.1:28090/logs?q={$transactionUid}",
              type: "GET"
            },

            // Verification strings to look for in the response.
            verify: [ "Unknown destination mailbox" ]
          }
        ]
      }
    }
  ],

  // Assertions to run against the connection.
  assertions: {
    // Protocol assertions.
    // Check SMTP responses match regular expressions.
    protocol: [
      [ "SMTP", "^220" ],
      [ "EHLO", "STARTTLS" ],
      [ "QUIT" ]
    ]
  }
}

<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="30" shutdownHook="disable">
    <Appenders>
        <RollingFile name="appender" filePattern="./log/robin-build-%d{yyyyMMdd}.log">
            <PatternLayout pattern="%-5p|%d{MMdd-HHmmssSSS}|%t|%c{2}|%X{aCode}|%X{bCode}|%X{cCode}|%m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p|%d{MMdd-HHmmssSSS}|%t|%c{2}|%X{aCode}|%X{bCode}|%X{cCode}|%m%n"/>
        </Console>
        <AsyncAppender name="async" includeLocation="false">
            <AppenderRef ref="appender"/>
            <AppenderRef ref="console"/>
        </AsyncAppender>
    </Appenders>

    <Loggers>
        <Logger name="com.mimecast.robin" level="debug" additivity="false">
            <AppenderRef ref="async"/>
        </Logger>

        <Root level="error">
            <AppenderRef ref="async"/>
        </Root>
    </Loggers>

</Configuration>